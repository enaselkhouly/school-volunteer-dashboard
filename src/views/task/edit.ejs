<div class="row main-content">
  <div class="container-fluid">
		<div class="row">
      <div class="col-12">
        <h5 class="main-page-title">Edit Volunteer task</h5>
      </div>
    </div>
    <div class="row">
    <div class="col-12">
			<div class="row">
				<div class="col-12 col-lg-10 col-xl-8">
					<div class="innerpage-container">
            <div class="form">
              <form action="/tasks/<%=task._id%>?_method=PUT" method="POST">
                <div class="form-group">
                	<label for="task-name">Task Summary</label>
                	<input id="task-name"class="form-control" type="text" value="<%=task.name%>" name="task[name]"
                	required/>
                </div>
                <div class="form-group">
                    <label for="category">Select Category</label>
                    <select class="form-control" name='task[category]' id="category">
                      <option value="<%=task.category%>" selected><%=task.category%></option>
                      <option value="Uncategorized">Uncategorized</option>
  										<option value="In-campus">In-campus</option>
  										<option value='Outdoors'>Outdoors</option>
  										<option value='At Home'>At Home</option>
                    </select>
                </div>
                <fieldset class="form-group">
                    <legend>Is Fixed time?</legend>
                    <div class="form-check">
                      <label class="form-check-label">
                        <input type="radio" class="form-check-input" value="<%=task.isFixedTime%>" name="task[isFixedTime]" id="optionsRadiosYes">
                				Yes
                			</label>
                    </div>
                    <div class="form-check">
                    	<label class="form-check-label">
                        <input type="radio" class="form-check-input" value="<%=task.isFixedTime%>" name="task[isFixedTime]" id="optionsRadiosNo">
                				No
                			</label>
                    </div>
                  </fieldset>
                  <div class="form-group">
                    <label for="date">Date</label>
                    <input type="text"  class="form-control" id="date-picker" name="task[deadline]" value="<%=task.deadline.getMonth()+1%>/<%=task.deadline.getDate()%>/<%=task.deadline.getFullYear()%>">
                  </div>
                  <div class="form-group">
                    <label for="from">From</label>
                    <input type="text"  class="form-control" id="from-time" name="task[deadline]" value="<%=("0" + task.deadline.getHours()).slice(-2)%>:<%=("0" + task.deadline.getMinutes()).slice(-2)%>">
                  </div>
                  <div class="form-group">
                    <label for="to">To</label>
                    <input type="text"  class="form-control hide" id="to-date-picker" name="task[endTime]" value="<%=task.endTime%>">
                    <input type="text"  class="form-control" id="to-time" name="task[endTime]" value="<%=("0" + task.endTime.getHours()).slice(-2)%>:<%=("0"+ task.endTime.getMinutes()).slice(-2)%>">
                  </div>
                	<div class="form-group">
                		<label for="estimated-time">Estimated Time in minutes</label>
                		<input id="estimated-time" class="form-control" type="number" value="<%=task.volunteerTime%>" name="task[volunteerTime]"/>
                	</div>
                <div class="form-group">
                	<label for="description">Description</label>
                	<textarea id="description" class="form-control" type="text" rows="10" name="task[description]"><%=task.description%>
                  </textarea>
                </div>

                <div class="form-group">
                    <button class="btn btn-lg btn-primary btn-block">Submit!</button>
                </div>
              </form>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
