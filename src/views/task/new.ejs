<div class="row main-content">
  <div class="container-fluid">
		<div class="row">
      <div class="col-12">
        <h5 class="main-page-title">Create New Task</h5>
      </div>
    </div>
    <div class="row">
    <div class="col-12">
			<div class="row">
				<div class="col-12 col-lg-10 col-xl-8">
					<div class="innerpage-container">
						<div class="form">
						<form action="/tasks?project=<%=project._id%>" method="POST">
							<div class="form-group">
								<label for="task-name">Task Summary</label>
								<input id="task-name"class="form-control" type="text" placeholder="Enter task summary ..." name="task[name]"
								required/>
							</div>
							<div class="form-group">
									<label for="category">Select Category</label>
									<select class="form-control" name='task[category]' id="category">
										<option value="Uncategorized" selected>Uncategorized</option>
										<option value="In-campus">In-campus</option>
										<option value='Outdoors'>Outdoors</option>
										<option value='At Home'>At Home</option>
									</select>
							</div>
							<fieldset class="form-group">
									<legend>Is Fixed time?</legend>
									<div class="form-check">
										<label class="form-check-label">
											<input type="radio" class="form-check-input" name="task[isFixedTime]" id="optionsRadiosYes" value="true" checked>
											Yes
										</label>
									</div>
									<div class="form-check">
										<label class="form-check-label">
											<input type="radio" class="form-check-input" name="task[isFixedTime]" id="optionsRadiosNo" value="false">
											No
										</label>
									</div>
								</fieldset>
								<div class="form-group">
									<label for="estimated-time">Estimated time in minutes</label>
									<input id="estimated-time" class="form-control" type="number" value="30" name="task[estimatedTime]"/>
								</div>
							<div class="form-group">
								<label for="description">Description</label>
								<textarea id="description" class="form-control" type="text" placeholder="Enter task description ..." rows="10"
								name="task[description]"></textarea>
							</div>
							<div class="form-group" >
								<button class="btn btn-lg btn-success btn-block">Submit!</button>
							</div>
							</form>
						</div>
					</div>
				</div>
			</div>
		</div>
	</div>
