<div class="row main-content">
  <div class="container-fluid">
		<div class="row">
      <div class="col-12">
        <h5 class="main-page-title">Create New Task</h5>
      </div>
    </div>
    <div class="row">
    <div class="col-12">
			<div class="row">
				<div class="col-12 col-lg-10 col-xl-8">
					<div class="innerpage-container">
						<div class="form" id="newTask">
						<form class="validate" action="/projects/<%=projectId%>/tasks" method="POST">
							<div class="form-group">
								<label for="task-name"><strong>Task Summary</strong></label>
								<input id="task-name"class="form-control" type="text" placeholder="Enter task summary ..." maxlength="80" name="task[name]"
								required/>
							</div>
							<div class="form-group">
									<label for="category"><strong>Select Category</strong></label>
									<select class="form-control" name='task[category]' id="category">
										<option value="Uncategorized" selected>Uncategorized</option>
										<option value="In-campus">In-campus</option>
										<option value='Outdoors'>Outdoors</option>
										<option value='At Home'>At Home</option>
									</select>
							</div>
							<fieldset class="form-group">
									<lable><strong>Fixed time?</strong></lable>
									<div class="form-check">
										<label class="form-check-label">
											<input type="radio" class="form-check-input" name="task[isFixedTime]" id="optionsRadiosYes" value="true" checked required>
											Yes
										</label>
									</div>
									<div class="form-check">
										<label class="form-check-label">
											<input type="radio" class="form-check-input" name="task[isFixedTime]" id="optionsRadiosNo" value="false" required>
											No
										</label>
									</div>
								</fieldset>
								<div class="form-group">
									<label for="estimated-time"><strong>Task time/Estimated time (in mins)</strong></label>
									<input id="estimated-time" class="form-control" type="number" value="30" name="task[volunteerTime]" required/>
								</div>
                <div class="form-group">
                  <label for="date"><strong>Deadline/Date</strong></label>
                  <input type="text"  class="form-control" id="date-picker" name="task[deadline]" placeholder="select a date .." required>
                </div>
                <div class="form-group">
                  <label for="from"><strong>From</strong></label>
                  <input type="text"  class="form-control" id="from-time" name="task[deadline]" placeholder="select a start time" required>
                </div>
                <div class="form-group">
                  <label for="to"><strong>To</strong></label>
                  <input type="text"  class="form-control" id="to-time" name="task[endTime]" placeholder="select an end time" required>
                </div>
  							<div class="form-group">
  								<label for="description"><strong>Description</strong></label>
  								<textarea id="description" class="form-control" type="text" placeholder="Enter task description ..." rows="10"
  								name="task[description]"></textarea>
  							</div>
  							<div class="form-group" >
  								<button class="btn btn-lg btn-success btn-block">Create</button>
  							</div>
							</form>
						</div>
					</div>
				</div>
			</div>
		</div>
	</div>
