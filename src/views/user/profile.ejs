<div class="row main-content">
  <div class="container-fluid">
		<div class="row">
      <div class="col-12">
        <h1 class="main-page-title"><%= user.displayName%></h1>
      </div>
    </div>
    <div class="row">
    <div class="col-12">
			<div class="row">
				<div class="col-12 col-lg-10 col-xl-8">
					<div class="innerpage-container">
          <%if (user.userType === 'Family') {%>
          <div class="row justify-content-between">
            <div class="col-12 col-sm-6">
              <%
              vHr = (Math.floor(volunteerTime /60))? Math.floor(volunteerTime /60)+"hrs " : ""
              vMin = (volunteerTime %60)? volunteerTime %60+"mins ": ""
              vHr = (!vHr && !vMin)? "0 " : vHr
              rHr = (Math.floor(user.requiredVolunteerTime/60))? Math.floor(user.requiredVolunteerTime/60)+ "hrs ": ""
              rMin = (user.requiredVolunteerTime%60) ? (user.requiredVolunteerTime%60)+ "mins " : ""
              rHr = (!rHr && !rMin)? "0 " : rHr
              perc = (volunteerTime < user.requiredVolunteerTime)? (volunteerTime / user.requiredVolunteerTime)*100 : 100
              perc = Math.floor(perc)
              %>
              <div class="row">
                <div class="col-12 text-center">
                  <h5 class="font-weight-bold text-info">Non PTA Volunteer Time</h5>
                </div>
                <div class="col-12">
                  <div class="c100 p<%=perc%> green center-block">
                    <span><%=perc%>%</span>
                    <div class="slice">
                      <div class="bar"></div>
                      <div class="fill"></div>
                    </div>
                  </div>
                </div>
                <div class="col-12 text-center">
                  <p><%= vHr%> <%= vMin%> completed out of <%= rHr%> <%= rMin%> required non PTA volunteering</p>
                </div>
              </div>
            </div>
            <div class="col-12 col-sm-6 pt-5 pt-sm-0">
              <%
              vHr = (Math.floor(ptaVolunteerTime /60))? Math.floor(ptaVolunteerTime /60)+"hrs " : ""
              vMin = (ptaVolunteerTime %60)? ptaVolunteerTime %60+"mins ": ""
              vHr = (!vHr && !vMin)? "0 " : vHr
              rHr = (Math.floor(user.requiredPtaVolunteerTime/60))? Math.floor(user.requiredPtaVolunteerTime/60)+ "hrs ": ""
              rMin = (user.requiredPtaVolunteerTime%60) ? (user.requiredPtaVolunteerTime%60)+ "mins " : ""
              rHr = (!rHr && !rMin)? "0 " : rHr
              perc = (ptaVolunteerTime < user.requiredPtaVolunteerTime)? (ptaVolunteerTime / user.requiredPtaVolunteerTime)*100 : 100
              perc = Math.floor(perc)
              %>
              <div class="row">
                <div class="col-12 text-center">
                  <h5 class="font-weight-bold text-info">PTA Volunteer Time</h5>
                </div>
                <div class="col-12">
                  <div class="c100 p<%=perc%> green center-block">
                    <span><%=perc%>%</span>
                    <div class="slice">
                      <div class="bar"></div>
                      <div class="fill"></div>
                    </div>
                  </div>
                </div>
                <div class="col-12 text-center">
                  <p><%= vHr%> <%= vMin%> completed out of <%= rHr%> <%= rMin%> required PTA volunteering</h5>
                </div>
              </div>
            </div>
          </div>
          <%}%>
          <hr/>
          <div class="row justify-content-between">
            <div class="col col-sm-6">
              <h5 class="font-weight-bold text-info pl-2">Username</h5>
            </div>
            <div class="col col-sm-6">
              <h5 class="pl-2"><%= user.username%></h5>
            </div>
          </div>
          <hr>
          <div class="row justify-content-between">
            <div class="col col-sm-6">
              <h5 class="font-weight-bold text-info pl-2">Primary Email</h5>
            </div>
            <div class="col col-sm-6">
              <h5 class="pl-2"><%= user.email%></h5>
            </div>
          </div>
          <hr>
          <% if(user.email2) {%>
          <div class="row justify-content-between">
            <div class="col col-sm-6">
              <h5 class="font-weight-bold text-info pl-2">Secondary Email</h5>
            </div>
            <div class="col col-sm-6">
              <h5 class="pl-2"><%= user.email2%></h5>
            </div>
          </div>
          <hr>
          <% } %>
          <div class="row justify-content-between">
            <div class="col col-sm-6">
              <h5 class="font-weight-bold text-info pl-2">User Type</h5>
            </div>
            <div class="col col-sm-6">
              <h5 class="pl-2"><%= user.userType%></h5>
            </div>
          </div>
          <% if (currentUser.userType === 'Admin') {%>
          <div class="row mt-5">
            <div class="col-12">
              <a class="btn btn-outline-warning" href="/users/<%=user._id%>/edit">Edit</a>
              <form id="delete-form" action="/users/<%= user._id%>?_method=DELETE" method="POST">
                <% if (user._id.equals(currentUser._id)){%>
                  <button class="btn btn-outline-secondary" disabled>Delete</button>
                <%} else {%>
                <button class="btn btn-outline-danger">Delete</button>
                <%}%>
            </div>
          </div>
          <%}%>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
