<div class="row main-content">
  <div class="container-fluid">
		<div class="row">
      <div class="col-12">
        <h5 class="main-page-title">Edit User</h5>
      </div>
    </div>
    <div class="row">
    <div class="col-12">
			<div class="row">
				<div class="col-12 col-lg-10 col-xl-8">
					<div class="innerpage-container">
            <div class="form">
              <form class="validate" action="/users/<%=user._id %>?_method=PUT" method="POST">
                <div class="form-group">
                  <label for="displayName"><strong>Display Name</strong></label>
                  <input id="displayName" class="form-control" type="text" name="user[displayName]" value="<%=user.displayName%>"
                  title="Display name can only be one or two parts of letters and/or numbers separated by space, '_', '-', or '.'"
                  pattern="^(?![_.])(?!.*[_.]{2})[a-zA-Z0-9._ ]+(?<![_.])$"></input>
                </div>
                <div class="form-group">
                  <label for="username"><strong>User Name</strong></label>
                  <input id="username" class="form-control" type="text" name="user[username]" value="<%=user.username%>"
                  title="Username can only be one or two parts of letters and/or numbers separated by '_', '-', or '.'"
                  pattern="^(?![_.])(?!.*[_.]{2})[a-zA-Z0-9._]+(?<![_.])$" maxlength='30' required></input>
                </div>
                <% if (user.userType === 'Family') {%>
                <div class="form-group">
                  <label for="vtime"><strong>Required Volunteer Time in hrs</strong></label>
                  <input id="vtime" class="form-control" type="number" name="user[requiredVolunteerTime]" value="<%=user.requiredVolunteerTime/60%>" required></input>
                </div>
                <%}%>
                <div class="form-group">
                  <button class="btn btn-lg btn-primary btn-block">Edit</button>
                </div>
              </form>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
