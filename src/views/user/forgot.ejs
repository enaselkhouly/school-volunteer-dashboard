<%- include ../partials/common/header%>

<div class="home-page">
  <div class="row h-100">
    <div class="col-12 col-lg-6 mx-auto my-auto">
      <div class="cover-container d-flex h-100 p-3 mx-auto flex-column">
        <main role="main" class="inner cover my-auto">
          <div class="container innerpage-container">
            <%- include ../partials/common/flash%>
            <h2 class="form-header">Password Reset</h2>
            <p>Enter your email address below and we will send you password reset instructions.</p>
            <div class="form">
              <form action="/forgot" class="validate" method="POST">
                <div class="form-group">
                    <input class="form-control" type="email" name="email" placeholder="Enter your email address" required></input>
                </div>
                <div class="form-group">
                    <button class="btn btn-primary btn-block">Reset Password</button>
                </div>
              </form>
            </div>
          </div>
        </main>
      </div>
    </div>
  </div>
</div>

<%- include ../partials/common/footer%>
