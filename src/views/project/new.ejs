<div class="row main-content">
  <div class="container-fluid">
		<div class="row">
      <div class="col-12">
        <h4 class="main-page-title">Create New Project</h4>
      </div>
    </div>
    <div class="row">
    <div class="col-12">
			<div class="row">
				<div class="col-12 col-lg-10 col-xl-8">
					<div class="innerpage-container">
						<div class="form">
						<form class="validate" action="/projects" method="POST">
							<div class="form-group">
								<label for="project-name"><strong>Project Summary</strong> <span class="text-danger">*</span></label>
								<input id="project-name"class="form-control" type="text" placeholder="Enter project summary ..." maxlength="80" name="project[name]"
								required/>
							</div>
              <fieldset class="form-group">
								<lable><strong>PTA?</strong></lable>
								<div class="form-check">
									<label class="form-check-label">
										<input type="radio" class="form-check-input" name="project[isPTA]" id="optionsRadiosYes" value="true" required>
										Yes
									</label>
								</div>
								<div class="form-check">
									<label class="form-check-label">
										<input type="radio" class="form-check-input" name="project[isPTA]" id="optionsRadiosNo" value="false" checked required>
										No
									</label>
								</div>
							</fieldset>
							<div class="form-group">
								<label for="description"><strong>Description</strong></label>
								<textarea id="description" class="form-control" type="text" placeholder="Enter project description ..." rows="10"
								name="project[description]"></textarea>
							</div>
							<div class="form-group" >
								<button class="btn btn-lg btn-success btn-block">Create</button>
							</div>
							</form>
						</div>
					</div>
				</div>
			</div>
		</div>
	</div>
